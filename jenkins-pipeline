pipeline {
    agent {
        label 'buildserver'
    }

    tools {
        maven 'maven'
    }

    stages {

        stage('clone the git repository') {
            steps {
                echo "clone the git repository"
                git 'https://github.com/venkatvirat/war-web-project.git'
            }
        }

        
        stage('compilation') {
            steps {
                echo "compile the source code"
                sh "mvn clean compile"
            }
        }

        stage('unit-test-cases') {
            steps {
                echo "run the unit test cases"
                sh "mvn clean test"
            }
        }

        stage('package the code') {
            steps {
                echo "package the source code"
                sh "mvn clean package"
            }
            post {
                success {
                    echo "archive the artifacts"
                    archiveArtifacts artifacts: 'target/*.war, followSymlink: false'
                }
            }
        }

        stage('upload the artifact') {
            steps {
                echo "uploading the artifact"
                nexusArtifactUploader artifacts: [[artifactId: 'wwp', classifier: '', file: 'target/*.war', type: 'war']], credentialsId: 'nexus-credentials', groupId: 'koddas.web.war', nexusUrl: '54.194.165.230', nexusVersion: 'nexus3', protocol: 'http', repository: 'maven-snapshots', version: '1.0.1-SNAPSHOT'
            }
        }
    }
}
          
